# https://editorconfig.org/


[*]
end_of_line = lf
charset = utf-8
indent_style = space

[{CMakeLists.*,*.cmake}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.{bat,cmd,cmd.*}]
[*.{ps1,ps1.*}]
end_of_line = crlf
indent_style = space
indent_size = 4
[*.{md,markdown}]
indent_size = 2
